<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">

        <!-- Basic HTML Meta Tags -->
		<meta name="author" content="Parnell Polliotti">
		<meta name="description" content="Page d'administration de mon blog">
        <meta name="copyright" content="Parnell Polliotti">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Font Awesome icons -->
		<link href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" rel="stylesheet" type="text/css">

		<!-- Custom styles for this page -->
		{% block extraCSS %}{% endblock %}

		<!-- Core theme CSS (includes Bootstrap) -->
		<link href="/css/admin.min.css" rel="stylesheet">

		<!-- Toggle switchy lib -->
		<link href="/vendor/admin/toggle-switchy.css" rel="stylesheet">

        <title>{% block title %}Parnell Polliotti's blog{% endblock %}</title>
    </head>
    <body id="page-top">
		<div id="wrapper">
			{% include "@admin/parts/_sidebar.html.twig" with { active: active } only %}

			<div id="content-wrapper" class="d-flex flex-column">
				<div id="content">
					{% include "@admin/parts/_topbar.html.twig" only %}

					<div class="container-fluid">{% block main %}{% endblock %}</div>
				</div>

				{% include "@admin/parts/_footer.html.twig" only %}
			</div>
		</div>

		<a class="scroll-to-top rounded" href="#page-top">
			<i class="fas fa-angle-up"></i>
		</a>

		{% include "@admin/parts/_logout_modal.html.twig" only %}

		<!-- Bootstrap core JavaScript-->
		<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>

		<!-- Core plugin JavaScript-->
		<script src="https://cdn.jsdelivr.net/npm/jquery.easing@1.4.1/jquery.easing.min.js"></script>

		<!-- Custom scripts for all pages-->
		<script src="/js/admin/sb-admin-2.js"></script>

		<!-- Page level scripts -->
		{% block extraJS %}{% endblock %}
	</body>
</html>