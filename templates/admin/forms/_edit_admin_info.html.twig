<form action="/admin#message" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="catchPhrase">Phrase d'accroche</label>
		<input type="text" class="form-control" id="catchPhrase" name="catchPhrase" value="{{ admin.catchPhrase }}" required="">
	</div>
	<div class="form-group">
		<label for="CVFile">Uploader le curriculum vitæ</label>
		<input type="file" class="form-control-file" id="CVFile" name="CVFile">
	</div>
	<div class="row">
		<div class="form-group col-12 col-md-6">
			<label for="pictureFile">Uploader la photo d'identité ( utiliser sur la page d'accueil )</label>
			<input type="file" class="form-control-file" id="pictureFile" name="pictureFile">
		</div>
		<div class="form-group col-12 col-md-6">
			<label for="pictureAlt">Description de la photo d'identity</label>
			<input type="text" class="form-control" id="pictureAlt" name="pictureAlt" value="{{ admin.altPicture }}" required="">
		</div>
	</div>
	<button type="submit" class="btn btn-primary" name="submitButtonAdminInfo">Sauvegarder</button>
</form>

{% if message.adminInfoSuccess is not null %}
	<p class="mt-3 text-success" id="message">Les informations admin on bien été mise a jour.</p>
{% endif %}

{% if message.adminInfoError is not null %}
	<p class="mt-3 text-danger" id="message">{{ message.adminInfoError }}</p>
{% endif %}