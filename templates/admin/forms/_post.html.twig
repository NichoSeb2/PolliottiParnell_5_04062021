<form action="" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="title">Titre</label>
		<input type="text" class="form-control" id="title" name="title" value="{{ form.title is not null ? form.title : post.title }}" required="">
	</div>
	<div class="form-group">
		<label for="content">Contenu ( compatible markdown )</label>
		<textarea class="form-control" id="content" name="content" rows="3" required="">{{ form.content is not null ? form.content : post.content }}</textarea>
	</div>
	<div class="row">
		<div class="form-group col-12 col-md-6">
			<label for="coverImageFile">Téléverser l'image de couverture</label>
			<input type="file" class="form-control-file" id="coverImageFile" name="coverImageFile" {{ create ? 'required' : '' }}>
		</div>
		<div class="form-group col-12 col-md-6">
			<label for="coverImageAlt">Description de l'image de couverture</label>
			<input type="text" class="form-control" id="coverImageAlt" name="coverImageAlt" value="{{ form.coverImageAlt is not null ? form.coverImageAlt : post.altCoverageImage }}" required="">
		</div>
	</div>
	<button type="submit" class="btn btn-primary" name="submitButton">Sauvegarder</button>
</form>

{% if message.success is not null %}
	<p class="mt-3 text-success" id="message">{{ message.success }}</p>
{% endif %}

{% if message.error is not null %}
	<p class="mt-3 text-danger" id="message">{{ message.error }}</p>
{% endif %}