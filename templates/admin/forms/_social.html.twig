<form action="{{ action }}" method="post">
	<div class="form-group">
		<label for="name">Nom du réseau social</label>
		<input type="text" class="form-control" id="name" name="name" value="{{ social.name }}" required="">
	</div>
	<div class="row">
		<div class="form-group col-12 col-md-6">
			<label for="url">Lien du réseau social</label>
			<input type="url" class="form-control" id="url" name="url" value="{{ social.url }}" required="">
		</div>
		<div class="form-group col-12 col-md-6">
			<label for="icon">Classe de l'icone font-awesome du réseau social</label>
			<input type="text" class="form-control" id="icon" name="icon" value="{{ social.icon }}" placeholder="Ex : fab fa-twitter" required="">
		</div>
	</div>
	<button type="submit" class="btn btn-primary" name="submitButton">Sauvegarder</button>
</form>

<br>

{% if message.success is not null %}
	<p class="text-success">{{message.success}}</p>
{% endif %}

{% if message.error is not null %}
	<p class="text-danger">{{message.error}}</p>
{% endif %}