{% extends "@admin/base.html.twig" %}

{% block title %}Profil - {{parent()}}{% endblock %}

{% block main %}
	<h1 class="h3 mb-2 text-gray-800">Édition des informations du compte</h1>
	<form action="/admin" method="post">
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label for="firstName">Prenom</label>
				<input type="text" class="form-control" id="firstName" name="firstName" value="{{ admin.firstName }}" required="">
			</div>
			<div class="form-group col-12 col-md-6">
				<label for="lastName">Nom</label>
				<input type="text" class="form-control" id="lastName" name="lastName" value="{{ admin.lastName }}" required="">
			</div>
		</div>
		<div class="form-group">
			<label for="email">Email</label>
			<input type="email" class="form-control" id="email" name="email" value="{{ admin.email }}" required="">
		</div>
		<button type="submit" class="btn btn-primary" name="submitButtonAccount">Sauvegarder</button>
	</form>

	{% if accountSuccess is defined %}
		<p class="mt-3 text-success">Les informations de votre compte on bien été mise a jour.</p>
	{% endif %}

	{% if accountError is defined %}
		<p class="mt-3 text-danger">{{ accountError }}</p>
	{% endif %}

	<br>

	<h1 class="h3 mb-2 text-gray-800">Édition du mot de passe</h1>
	<form action="/admin" method="post">
		<div class="form-group">
			<label for="oldPassword">Ancien mot de passe</label>
			<input type="password" class="form-control" id="oldPassword" required="">
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label for="password">Nouveau mot de passe</label>
				<input type="password" class="form-control" id="password" required="">
			</div>
			<div class="form-group col-12 col-md-6">
				<label for="confirmPassword">Confirmation du nouveau mot de passe</label>
				<input type="password" class="form-control" id="confirmPassword" required="">
			</div>
		</div>
		<button type="submit" class="btn btn-primary" name="submitButtonPassword">Sauvegarder</button>
	</form>

	<br>

	<h1 class="h3 mb-2 text-gray-800">Édition des informations administrateur</h1>
	<form action="/admin" method="post">
		<div class="form-group">
			<label for="catchPhrase">Phrase d'accroche</label>
			<input type="text" class="form-control" id="catchPhrase" value="{{ admin.catchPhrase }}">
		</div>
		<div class="form-group">
			<label for="CVFile">Uploader le curriculum vitæ</label>
			<input type="file" class="form-control-file" id="CVFile">
		</div>
		<div class="row">
			<div class="form-group col-12 col-md-6">
				<label for="pictureFile">Uploader la photo d'identité ( utiliser sur la page d'accueil )</label>
				<input type="file" class="form-control-file" id="pictureFile">
			</div>
			<div class="form-group col-12 col-md-6">
				<label for="pictureAlt">Description de la photo d'identity</label>
				<input type="text" class="form-control" id="pictureAlt" value="{{ admin.altPicture }}">
			</div>
		</div>
		<button type="submit" class="btn btn-primary" name="submitButtonAdmin">Sauvegarder</button>
	</form>

	<br>
{% endblock %}