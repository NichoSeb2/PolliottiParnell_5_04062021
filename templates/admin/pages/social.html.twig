{% extends "@admin/base.html.twig" %}

{% block title %}Liens sociaux - {{parent()}}{% endblock %}

{% block extraCSS %}
	<link href="/vendor/admin/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
{% endblock %}

{% block extraJS %}
    <script src="/vendor/admin/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/admin/datatables/dataTables.bootstrap4.min.js"></script>

	<script src="/js/admin/social_init_table.js"></script>

	<script src="/js/admin/modal_delete.js"></script>
{% endblock %}

{% block main %}
	<h1 class="h3 mb-2 text-gray-800">Liste des liens sociaux</h1>

	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Icon</th>
							<th>URL</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for social in socials %}
							{% include "@admin/parts/_social_preview.html.twig" with { social: social } only %}
						{% endfor %}
					</tbody>
					<tfoot>
						<tr>
							<th>Nom</th>
							<th>Icon</th>
							<th>URL</th>
							<th>Action</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>

	{% include "@admin/parts/_delete_modal.html.twig" only %}
{% endblock %}