<tr>
	<td>{{ comment.author }}</td>
	<td>{{ comment.content }}</td>
	<td>{{ comment.createdAt }}</td>
	<td>
		<label for="{{ comment.id }}Comment" class="toggle-switchy" data-comment-id="{{ comment.id }}" data-style="rounded" data-text="false" data-size="sm" data-color="primary" data-label="right">
			<input {{ comment.status == "online" ? "checked" : "" }} type="checkbox" id="{{ comment.id }}Comment" data-true-label="En ligne" data-false-label="Hors ligne">
			<span class="toggle">
				<span class="switch"></span>
			</span>
			<span class="label" id="{{ comment.id }}CommentLabel">{{ comment.status == "online" ? "En ligne" : "Hors ligne" }}</span>
		</label>
	</td>
</tr>