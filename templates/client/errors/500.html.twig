{% extends "@client/errors/error.html.twig" %}

{% block title %}
	500
{% endblock %}

{% block main %}
	<h1>500</h1>

	{% if file is defined %}
		<p>Error in <b>{{ file }}</b> on line <b>{{ line }}</b></p>
	{% endif %}

	<p>{{ message }}</p>

	{% for trace in traces %}
		<p>Error trace in <b>{{ trace["file"] }}</b> on line <b>{{ trace["line"] }}</b></p>
	{% else %}
	{% endfor %}
{% endblock %}