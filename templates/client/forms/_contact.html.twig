<form action="/contact" method="post">
	<div class="form-floating">
		<input class="form-control" id="name" type="text" placeholder="Entrez votre nom..." name="name" required="">
		<label for="name">Nom</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="email" type="email" placeholder="Entrer votre E-mail..." name="email" required="">
		<label for="email">Adresse e-mail</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="subject" type="text" placeholder="Entrez votre nom..." name="subject" required="">
		<label for="subject">Sujet</label>
	</div>
	<div class="form-floating">
		<textarea class="form-control" id="message" placeholder="Entrez votre message ici..." style="height: 12rem; min-height: 4.5rem;" name="message" required=""></textarea>
		<label for="message">Message</label>
	</div>

	<br>

	{% if success %}
		<div id="submitSuccessMessage">
			<div class="text-center text-success mb-3">
				<div class="fw-bolder">Votre message a bien été envoyer !</div>
			</div>
		</div>
	{% endif %}

	{% if error %}
		<div id="submitErrorMessage">
			<div class="text-center text-danger mb-3">
				<div class="fw-bolder">Erreur lors de l'envoi du message !</div>
			</div>
		</div>
	{% endif %}

	<div class="d-flex justify-content-center mb-5"><button class="btn btn-primary text-uppercase text-light" id="submitButton" name="submitButton" type="submit">Envoyer</button></div>
</form>