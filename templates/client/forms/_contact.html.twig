<form action="/contact#message" method="post">
	<div class="form-floating">
		<input class="form-control" id="name" type="text" placeholder="Entrez votre nom..." name="name" required="">
		<label for="name">Nom</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="email" type="email" placeholder="Entrez votre E-mail..." name="email" required="">
		<label for="email">Adresse e-mail</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="subject" type="text" placeholder="Entrez le sujet de votre message..." name="subject" required="">
		<label for="subject">Sujet</label>
	</div>
	<div class="form-floating">
		<textarea class="form-control" id="message" placeholder="Entrez votre message ici..." style="height: 12rem; min-height: 4.5rem;" name="message" required=""></textarea>
		<label for="message">Message</label>
	</div>

	<br>

	<div class="d-flex justify-content-center mb-4">
		<button class="btn btn-primary text-uppercase text-light" id="submitButton" name="submitButton" type="submit">Envoyer</button>
	</div>

	{% if message.success is not null %}
		<p class="text-success text-center" id="message">{{ message.success }}</p>
	{% endif %}

	{% if message.error is not null %}
		<p class="text-danger text-center" id="message">{{ message.error }}</p>
	{% endif %}
</form>