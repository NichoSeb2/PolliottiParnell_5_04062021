<form action="/register" method="post" class="m-auto" style="max-width: 500px;">
	<div class="form-floating">
		<input class="form-control" id="firstName" name="firstName" type="text" placeholder="Entrer votre prenom..." required="" value="{{ form.firstName }}">
		<label for="firstName">Prenom</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="lastName" name="lastName" type="text" placeholder="Entrer votre nom..." required="" value="{{ form.lastName }}">
		<label for="lastName">Nom</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="email" name="email" type="email" placeholder="Entrer votre E-mail..." required="" value="{{ form.email }}">
		<label for="email">Adresse e-mail</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="password" name="password" type="password" placeholder="Entrez votre mot de passe..." required="">
		<label for="password">Mot de passe</label>
	</div>
	<div class="form-floating">
		<input class="form-control" id="confirmPassword" name="confirmPassword" type="password" placeholder="Entrez la confirmation de votre mot de passe..." required="">
		<label for="confirmPassword">Confirmation mot de passe</label>
	</div>

	{% if error is defined %}
		<p class="text-justify text-danger">{{ error }}</p>
	{% endif %}

	<div class="d-flex justify-content-center">
		<button class="btn btn-primary text-uppercase text-light w-100" id="submitButton" name="submitButton" type="submit">S'enregistrer</button>
	</div>

	{% if success %}
		<p class="text-justify text-success mb-1">Votre compte a bien été créer.</p>
		<p class="text-justify text-success mt-1 mb-2">Un mail de verification vous a été envoyé, veuillez suivre les indications qui y mentionnées pour vérifier votre compte.</p>
	{% endif %}

	<div class="d-flex justify-content-center mt-4 mb-4">
		<a href="/login">Se connecter</a>
	</div>
	<div class="d-flex justify-content-center mt-4 mb-4">
		<a href="/resend">Vous n'avez pas reçu votre mail de vérification ?</a>
	</div>
</form>