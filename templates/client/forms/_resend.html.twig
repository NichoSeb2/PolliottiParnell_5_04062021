<form action="/resend#message" method="post" class="m-auto" style="max-width: 500px;">
	<p class="text-justify mb-3">Entrer l'adresse e-mail utiliser pour la création de votre compte.</p>
	<div class="form-floating">
		<input class="form-control" id="email" name="email" type="email" placeholder="Entrer votre E-mail..." required="">
		<label for="email">Adresse e-mail</label>
	</div>

	<br>

	<div class="d-flex justify-content-center">
		<button class="btn btn-primary text-uppercase text-light w-100" id="submitButton" name="submitButton" type="submit">Renvoyer le mail</button>
	</div>

	{% if message.success is not null %}
		<p class="text-justify text-success" id="message">{{ message.success }}</p>
	{% endif %}

	{% if message.error is not null %}
		<p class="text-justify text-danger" id="message">{{ message.error }}</p>
	{% endif %}

	<div class="d-flex justify-content-center mt-4 mb-4">
		<a href="/register">Créer un compte</a>
	</div>
	<div class="d-flex justify-content-center mt-4 mb-4">
		<a href="/login">Se connecter</a>
	</div>
</form>