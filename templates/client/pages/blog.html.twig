{% extends "@client/base.html.twig" %}

{% block title %}Blog - {{parent()}}{% endblock %}

{% block main %}
	<div class="container px-2 px-lg-3">
		<div class="row gx-2 gx-lg-3 justify-content-center">
			<div class="col-md-10 col-lg-8 col-xl-7">
				<h2 class="section-heading">Tous mes articles :</h2>

				{% for p in post %}
					{% include "@client/parts/_devider.html.twig" only %}

					{% include "@client/parts/_post_preview.html.twig" with { post: p } only %}
				{% else %}
					<p class="text-center">Aucun article n'a encore été publié, mais cela ne devrait tarder !</p>
				{% endfor %}

				{% include "@client/parts/_devider.html.twig" only %}

				{% include "@client/parts/_paging.html.twig" with { firstPage, lastPage, previousPage, currentPage, nextPage } only %}
			</div>
		</div>
	</div>
{% endblock %}