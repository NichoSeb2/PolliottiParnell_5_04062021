{% extends "@client/base.html.twig" %}

{% block title %}Vérification de compte - {{parent()}}{% endblock %}

{% block main %}
	<div class="container px-2 px-lg-3">
		<div class="row gx-2 gx-lg-3 justify-content-center">
			<div class="col-md-10 col-lg-8 col-xl-7 text-center">
				<h2 class="section-heading mt-3">Vérification de compte</h2>

				{% if message.success is not null %}
					<p class="text-success">{{ message.success }}</p>
					<a class="d-inline-block mb-5" href="/login">Se connecter</a>
				{% endif %}

				{% if message.error is not null %}
					<p class="text-danger">{{ message.error }}</p>
					<a class="d-inline-block mb-5" href="/resend">Demander un renvoie</a>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}